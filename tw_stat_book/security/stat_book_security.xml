<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Gruppo Utente Stat Book -->
        <record id="group_stat_book_user" model="res.groups">
            <field name="name">Stat Book: Utente</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">Può visualizzare i grafici e i dati statistici</field>
        </record>

        <!-- Gruppo Amministratore Stat Book -->
        <record id="group_stat_book_admin" model="res.groups">
            <field name="name">Stat Book: Amministratore</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_stat_book_user'))]"/>
            <field name="comment">Può modificare le impostazioni e aggiungere dati statistici</field>
        </record>
    </data>
</odoo>
